{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "removeComments": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "react-jsx",
    "outDir": "./",
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "tailwind.config.js": [
        "config/tailwind.config.ts"
      ],
    }
  },
  "include": [
    "src/components/**/*",
    "__tests__/**/*",
    "__mocks__/**/*",
    "__dev__/**/*",
    "config",
    "__debug__",
    "src/types/*.d.ts"
  ],
  "exclude": [
    "src/dist",
    "node_modules",
    "src/helpers/monaco",
  ]
}
