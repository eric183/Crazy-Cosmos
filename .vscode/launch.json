  "version": "0.2.0",
  "configurations": [

    {
      "request": "attach",
      "name": "Attach NestJS WS",
      "port": 9229,
      "restart": true,
      "stopOnEntry": false,
      "sourceMaps": true,
      "protocol": "inspector",

      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Nest: debug server-side",
      "type": "node-terminal",
      "request": "launch",
      "command": "yarn debug:server",
      "cwd": "${workspaceFolder}"
    },
  ]
}
